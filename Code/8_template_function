
// addition of two number
8_template_function

// typename = class , template <typename T> = template <class T>
#include <iostream>

using namespace std;

template <typename first, typename second> 
void addTwoNumber (first a, second b)
{
  cout<<"Addition is: "<< a + b <<endl;
}

int main()
{
  int a = 10;
  double b = 20.55;
  addTwoNumber(a,b);
  return 0;
}

OUTPUT:

Addition is: 30.55
