#include <iostream>
using namespace std;

int main()
{
    int a = 10, b =20 , c = 15;

    auto theLargest = [=] () -> int {

        if (a< b)
            return (b<c)? c : b;
      return (a<c)? c : a;
    };

    cout << "The largest number is : "<< theLargest()<<endl;

    return 0;
}

=> The largest number is: 20
