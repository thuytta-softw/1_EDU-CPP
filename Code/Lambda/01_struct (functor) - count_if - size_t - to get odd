#include <iostream>
#include <vector>     // vector
#include <algorithm> // count_if, for_each

using namespace std;

struct s_isOdd
{
    bool operator() (int x)
    {
        return x % 2;
    }
};

int main()
{
    vector <int> vec = {2,4,6,7};

    size_t c;

    c = count_if( vec.begin(), vec.end(), s_isOdd() ); // from begin to end of vec, if s_isOdd() false then count (functor s_isOdd)

    cout<<"Integers that are odd: "<<c<<endl;
    return 0;
}

=> Integers that are odd: 4

explain: 7 % 2 = 1 (false = 1)
