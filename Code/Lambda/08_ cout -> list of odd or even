
#include <iostream>
#include <vector>     // vector
#include <algorithm> // count_if, for_each

using namespace std;

int odd(auto vec)
{
    return count_if( vec.begin(), vec.end(),
                 [](int x) {
                                bool odd = x % 2;
                                cout<< x <<" is: "<<(odd ? "odd": "even")<<endl;
                                return odd;
                           }
                  );
}


int main()
{
    vector <int> vec = {2,4,6,7,9};

    size_t c = odd(vec);

    cout<<"Number of odd integers is : "<< c <<endl;

    return 0;
}

